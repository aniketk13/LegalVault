<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/mainBackgroundAndBlockBackground</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/lightblue_app</item>
        <item name="colorPrimaryDark">@color/lightblue_app</item>
        <item name="colorAccent">@color/lightblue_app</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/darkblue_app</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/action_mode_tab</item>
    </style>

    <style name="LoginSignupButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_login_button2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/til_box_outline</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="SocialLoginButton" parent="Widget.AppCompat.Button">

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#2e2f50</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">@dimen/login_social_dp</item>
        <item name="android:layout_height">@dimen/login_social_dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginTop">@dimen/size_very_small</item>

    </style>

    <style name="tabLayoutStyle">
        <item name="android:fontFamily">@font/metropolis_bold</item>
        <item name="android:textSize">@dimen/font_normal_18sp</item>
        <item name="android:textColor">@color/legSecondary</item>
        <item name="android:background">@color/legWhite</item>
    </style>

    <style name="NoCursorEditTextStyle">
        <item name="android:background">@color/lightest_blue_app</item>
        <item name="android:padding">0dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MyTabAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="tabSelectedTextColor">@color/medium_darkblue_app</item>
        <item name="android:textSize">16sp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="android:textColor">#808080</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabIndicator">@drawable/tab_indicator_line</item>
        <item name="tabMode">auto</item>
        <item name="tabIndicatorColor">@color/medium_darkblue_app</item>
        <item name="tabTextColor">@color/tabs_heading</item>
        <item name="tabIndicatorHeight">@dimen/spacing_minimum_4dp</item>
    </style>


</resources>