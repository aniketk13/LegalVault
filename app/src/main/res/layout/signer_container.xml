<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:hint="Role of the Signer"
        android:id="@+id/inputRole"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/inputName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:hint="Name of the Signer"
        android:id="@+id/inputName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/inputRole"
        app:layout_constraintEnd_toStartOf="@id/inputEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:hint="Email of the Signer"
        android:id="@+id/inputEmail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/inputName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>